<article class="checkout">
  <%= render "shared/error_messages", target: @order %>
  <%= render "checkout_header" %>

  <div class="checkout__main">
    <section class="checkout__step">
      <%= render "checkout_step", order: @order %>
    </section>

    <% if @order.state != "confirm" %>
    <%# spree/checkout/registration.html.erb %>
      <% if Spree::Config[:allow_guest_checkout] && current_order.subscription_line_items.empty? %>
        <div class="checkout__summary">
          <%= render "checkout_summary", order: @order %>
        </div>
      <% end %>
    <% end %>
  </div>
</article>
